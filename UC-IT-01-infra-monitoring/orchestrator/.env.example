# UC-IT-01: Predictive Infrastructure Monitoring
# Environment Configuration / 环境配置
#
# Copy to .env and fill in values:
#   cp .env.example .env

# ---------- Prometheus ----------
PROMETHEUS_URL=http://localhost:9090

# ---------- Target Database (dbatest) ----------
DBATEST_HOST=
DBATEST_PORT=3306
DBATEST_USER=
DBATEST_PASS=
DBATEST_DB=test

# ---------- AWS CloudWatch ----------
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
# Or use AWS_PROFILE for SSO
# AWS_PROFILE=luckin-prod

# ---------- Pipeline Configuration ----------
BATCH_SIZE=500
LOG_LEVEL=INFO
DRY_RUN=false

# ---------- Feature Flags ----------
SKIP_CLOUDWATCH=false
SKIP_PROMETHEUS=false
ENABLE_SLOW_QUERY_ANALYSIS=true
ENABLE_EC2_COLLECTION=false

# ---------- SPC Parameters ----------
ROLLING_WINDOW=14
SIGMA_WARNING=2
SIGMA_CRITICAL=3

# ---------- Retention ----------
PIPELINE_LOG_RETENTION_DAYS=90
